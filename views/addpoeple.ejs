  <body>
    <div class="layui-container">  
      <div class="layui-row">
      <div class="layui-col-xs12">
        <img src="/xyqd/images/5582543_csse_logo.png" style="margin-top:10px;max-width:300px;margin-bottom: 10px;">
      </div>
    </div>
    <div class="layui-container">  
      
    <div>
    <form class="layui-form" action="" style="margin-top:15px;">
      <div class="layui-form-item">
        <label class="layui-form-label">校园卡号</label>
        <div class="layui-input-block">
          <input type="text" name="cardno" required  lay-verify="required" placeholder="请输入校园卡号"  class="layui-input" id="cardno">
        </div>
      </div>

      <div class="layui-form-item">
        <label class="layui-form-label">姓名</label>
        <div class="layui-input-block">
          <input type="text" name="name" required  lay-verify="required" placeholder="请输入姓名"  class="layui-input" id="name">
        </div>
      </div>
      <div class="layui-form-item">
        <label class="layui-form-label">用人方式</label>
        <div class="layui-input-block">
          <input type="text" name="usertype" required  lay-verify="required" placeholder="请输入用人方式"  class="layui-input" id="usertype">
        </div>
      </div>
      <div class="layui-form-item">
        <label class="layui-form-label">手机号码</label>
        <div class="layui-input-block">
          <input type="text" name="phone" placeholder=""  class="layui-input" id="phone">
        </div>
      </div>
      <div class="layui-form-item">
        <label class="layui-form-label">状态</label>
        <div class="layui-input-block">
          <input type="text" name="userstate"  placeholder="在岗/停薪"  class="layui-input" id="userstate">
        </div>
      </div>
            <div class="layui-form-item">
              <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="formDemo">确认</button>
              </div>
            </div>
          </form>
          <div class="layui-row">
      <div class="layui-col-xs12">
      </div>
    </div>
    <div class="layui-row">
        <div class="layui-col-md12">
        <hr/>
          <p class="footer" style="text-align: center;color: #ccc;"><span>计算机与软件学院 &copy; 2020</span></p>
